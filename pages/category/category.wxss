/* pages/category/category.wxss */
page{
  overflow-y: hidden;
}
.category{
  display: flex;
}
.nav{

}
.content{
  flex: 1;
  background: #f5f9fc;
}
.scroll{
  
}
.item{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px; 
  position: relative;
}
.item::after{
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: #eee;
   -webkit-transform: scale(1,0.5); 
            transform: scale(1,0.5); 
            -webkit-transform-origin: center bottom; 
            transform-origin: center bottom ;
}
.active{
  background: #f5f9fc;
  border:none; 
}
.goods-wrapper{
  padding: 16rpx;
}
.banner-wrapper{
  width: 100%;
  height: 198rpx;
}
.banner-wrapper image{
  width: 100%;
  height: 198rpx;
}
.list-content{
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 14rpx 20rpx;
}
.list-item{
  display: flex;
  flex-direction: column;
  width: 30%;
}
.list-item image{
  width:140rpx;
  height: 140rpx;
  align-self: center;
}
.list-item text{
  text-align: center;
  font-size: 14px;
}
.list-title{
  font-size: 14px;
  margin:20rpx 0;
  display: block;
  font-weight: 700;
}