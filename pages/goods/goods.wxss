/* pages/goods/goods.wxss */
page{
  background: #f3f5f7;
  padding-bottom: 110rpx;
}
.goods-detail__wrapper{
  
}
.slide-image{
  width: 100%;
  height: 100%;
}
.dot{
  width:100rpx;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 999;
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  border: 1px solid #eee;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background: rgba(0, 0, 0, 0.2)
}
.goods-info{
  padding: 16rpx;
  background: #fff;
}
.goods-title-wrapper{
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}
.goods-title{
  font-size: 16px;
  flex: 1;
  border-right: 1px solid #eee;
  
}
.goods-share{
  display: flex;
  flex-direction: column;
  margin:0 20rpx;
  color: #999;
  text-align: center;
  font-size: 12px;
}
.goods-des{
  font-size: 14px;
  color: #ff0000;
  margin-bottom: 10rpx;
}
.goods-other{
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin-bottom: 10rpx;
}
.price{
  color: #ff0000;
  margin-right: 8rpx;
}
.market-price{
  font-size: 14px;
  color: #666;
  text-decoration: line-through;
}
.sell-number{
  font-size: 14px;
  color: #333;
}
.goods-btn-wrapper{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}
.goods-btn-small{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 12px;
  width: 90rpx;
  background: #fff;
  height: 90rpx;
  border: 1px solid #eee;
  margin-left: -1px;
  color: #666;
}
.goods-btn-big{
  flex: 1;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  margin-left: -1px;
}
.bg-red{
  background: #ED3F14;
  border: 1px solid #ED3F14;
}
.bg-green{
  background: #19BD6B;
  border: 1px solid #19BD6B;
}
.ticket-info{
  font-size: 12px;
}
.ticket-style{
  border: 1px solid #ff0000;
  border-radius: 10rpx;
  padding: 4rpx 6rpx;
  color: #ff0000!important;
 
}
.custom-text-style{
  margin-left:10rpx;
  color: #666;
}
.shop-block{
  background: #fff;
  margin-bottom: 20rpx;
}
.shop-title{
  padding: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shop-avatar{
  width: 100rpx;
  height:100rpx;
  margin-right: 6rpx;
}
.shop-name{
  font-size: 14px;
}
.shop-btn-wrapper{
  display: flex;
}
.shop-btn{
  flex: 1;
  border: 1px solid #eee;
  text-align: center;
  padding: 18rpx 0;
  margin-right: -1px;
}
.shop-btn-name{
  font-size: 14px;
  color: #666;
  margin-left: 6rpx;
}
.goods-tabs{
  background: #fff;
}
.tabs-title{
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #eee;
}
.tabsActive{
  border-bottom: 2px solid #ff0000!important;
  color: #ff0000!important;
}
.tabs-title-name{
  font-size:14px;
  padding: 20rpx 0; 
  border-bottom: 2px solid transparent;
  color: #666;
  margin-bottom: -1px;
  
}
.tabs-item-wrapper{
  padding: 20rpx;
}
.goods-image{
  width: 100%;
  padding: 0;
  margin-bottom: -12rpx;
}
.table-block{
  display: flex;
  font-size: 14px;
  padding: 0 20rpx;
}
.table-title{
  flex: 2;
  display: flex;
  flex-direction: column;
  color: #666;
  margin-bottom: 10rpx;
  border: 1px solid #eee;
  text-align: center;
  
}
.table-content{
  flex: 3;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  border: 1px solid #eee;
  margin-left: -1px;
  text-align: center;
}
.table-content text,.table-title text{
  display: block;
  border-bottom: 1px solid #eee;
  margin-bottom: -1px;
  padding: 10rpx 40rpx;
}
.commodity_attr_box {
  height: 800rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  z-index: 1000;
  color: #fff;
}
.top{
    height:200rpx;
    color: #785151;
    background: #fff;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #eee;
    padding-bottom: 10rpx;
}
.goods-small-image{
    width: 200rpx;
    height: 200rpx;
    border: #f8f8f8 1px solid;
    border-radius: 4px;
    padding: 10rpx;
    margin-top: -30rpx;
    margin-left: 30rpx;
    background: #fff;
}
.popup-goods-info{
  display: flex;
  flex-direction: column;
  margin-left:30rpx;
}
.popup-other-color{
  color: #999;
  font-size: 14px;
  margin-bottom: 10rpx;
}
.middle{
  
}
.goods-property-item{
  display: flex;
  
}
.goods-property-item__wrapper{
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}
.goods-property-item__name{
  width: 120rpx;
  color: #666;
}
.goods-property-item__default{
  padding: 10rpx 40rpx;
  border: 1px solid #eee;
  margin-right: 20rpx;
  border-radius: 5px;
  color: #333;
  margin-bottom: 20rpx;
}
.goods-property-item__select{
  border-color:#19BD6B;
  background: #19BD6B;
  color:#fff;
}
.commodity_attr_list{
  padding: 0 20rpx;
}
.attr_wrapper {  
  display: flex;
  margin: 20rpx 0;
}  
.attr_name{
  width: 80rpx;
  font-size:14px; 
}
.attr_value_wrapper{
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  
}
.attr_value{
  padding: 0 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  border:1px solid #eee;
  border-radius:10rpx; 
  font-size: 14px;
  margin: 0 10rpx 20rpx 10rpx;
}
.attr_value_disabled {  
  color: #ccc;  
}  
.attr_value_active {  
  background: #FFCC00;   
  color: #fff;
} 
