/* pages/user/user.wxss */
.user-wrapper{
  background: #eee;
}
.user-info{
  width: 100%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
}
.user-background-wrapper{
  position: relative;
}
.user-background{
  width: 100%;
  height: 300rpx;
  filter: blur(5px);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  
}
.filter{
  position:absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: #555;
  opacity: 0.4;
}
.user-basic-info{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
}
.avatar{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 40rpx;
  
}
.name{
  color: #fff;
}
.user-process{
  height: 160rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;

}
.user-process__item{
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.user-process__name{
  font-size: 14px;
  color: #666;
}